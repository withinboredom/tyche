{
  "requires": [
    {
      "tool": "docker-compose",
      "version": "1.8.0"
    },
    {
      "tool": "docker",
      "version": "1.12.1"
    },
    {
      "tool": "npm",
      "version": "3.10.6"
    },
    {
      "tool": "nodejs",
      "version": "v6.4.0"
    },
    {
      "tool": "tyche",
      "version": "v0.0.1"
    }
  ],
  "projects": [
    {
      "name": "tyche-prep",
      "build": {
        "tool": "docker-compose",
        "service": "tyche-prep",
        "bare": "npm install"
      },
      "invalidate": [
        {
          "files": [
            "package.json"
          ]
        }
      ]
    },
    {
      "name": "tyche-cli",
      "build": {
        "tool": "docker-compose",
        "service": "tyche-builder",
        "bare": "npm run build-cli"
      },
      "dependencies": [
        "tyche-prep"
      ],
      "repo": "."
    }
  ],
  "runner": {
    "tool": "nodejs",
    "file": "index-compiled.js"
  },
  "actions": [
    {
      "name": "version-bump",
      "parameters": [
        {
          "required": true,
          "name": "version"
        }
      ],
      "run": {
        "tool": "docker-compose",
        "service": "bumper"
      }
    }
  ],
  "constraints": [
    {
      "name": "compile-on-push",
      "on": "git-push",
      "ensure": [
        {
          "object": "git.commit.sha",
          "matches": "projects.tyche-cli.build.commit.sha"
        }
      ]
    }
  ]
}
