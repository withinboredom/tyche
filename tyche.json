{
  "settings": {
    "defaultTool": "native"
  },
  "tasks": [
    {
      "name": "clean",
      "tasks": [
        {
          "name": "remove node_modules",
          "exec": {
            "native-nix": {
              "command": ["rm","-rf","node_modules"]
            },
            "docker-compose": {
              "action": "down"
            }
          }
        },
        {
          "name": "remove built files",
          "exec": {
            "native-nix": {
              "command": ["rm","-rf", "bin/*"]
            }
          },
          "always": "native",
          "dependencies": [
            "remove node_modules"
          ]
        }
      ]
    },
    {
      "name": "build",
      "tasks": [
        {
          "name": "install dependencies",
          "exec": {
            "native": {
              "command": ["npm","install"]
            },
            "docker-compose": {
              "service": "tyche-prep"
            }
          },
          "dependencies": [
            "clean"
          ],
          "skips": {
            "files_not_changed": [
              "package.json"
            ],
            "skip_dependencies_if_skip": true
          }
        },
        {
          "name": "build-cli",
          "exec": {
            "native": {
              "command": ["npm","run","build-cli"]
            },
            "docker-compose": {
              "service": "tyche-builder"
            }
          },
          "dependencies": [
            "install dependencies"
          ]
        }
      ]
    }
  ]
}
